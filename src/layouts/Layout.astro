---
interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "AyurCure Daily - प्राकृतिक स्वास्थ्य और घरेलू नुस्खों का विश्वसनीय स्रोत",
} = Astro.props;
---

<!doctype html>
<html lang="hi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />

    <!-- ✅ This is the fix -->
    <slot name="head" />

    <!-- Hindi font from Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+Devanagari:wght@300;400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>
  <body class="bg-gray-50 font-sans">
    <slot />
  </body>
</html>

<style>
  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: "Inter", "Noto Sans Devanagari", system-ui, sans-serif;
  }
</style>
